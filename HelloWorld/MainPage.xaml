<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HelloWorld.MainPage">
	<ContentPage.Content>
		<StackLayout Padding="30">
			<Label Text="Contact Name" Font="30" HorizontalOptions="Center" TextColor="Blue"/>
			<StackLayout Orientation="Horizontal">
				<Label Text="Name: " />
				<Label Text="{Binding FullName}" Font="14" TextColor="Green" />
				</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Label Text="Phone Number: " />
				<Label Text="{Binding Phone}" Font="14" TextColor="Green" />
					</StackLayout>
					
			<StackLayout Orientation="Horizontal">
				<Label Text="Email Address: " />
				<Label Text="{Binding Email}" Font="14" TextColor="Green" />
				</StackLayout>	
				
			<StackLayout>
				<Button Text="Go to Page 2" Clicked="OnButtonClick" HorizontalOptions="Center"/>
			
				</StackLayout>
			</StackLayout>
	</ContentPage.Content>
</ContentPage>